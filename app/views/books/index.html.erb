
<h1>Books</h1>
<h1>Student End</h1>

<style>
  table, th, td {
    border: 1px solid black;
  }
</style>

<%= link_to "My Book Requests (All)", book_requests_path %> |
<%= link_to "My Book Requests (Approved Only)", book_requests_path(status: "approved") %> |
<%= link_to "My Book Requests (Denied Only)", book_requests_path(status: "denied") %> |
<%= link_to "My Book Requests (Pending Only)", book_requests_path(status: "pending") %> |

<table class= "table-secondary" >
  <thead>
    <tr>
      <th>Title</th>
  
      <th>Author</th>
    
      <th>Description</th>

      <th>Action(s)</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td ><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= link_to "Show", book_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    
            