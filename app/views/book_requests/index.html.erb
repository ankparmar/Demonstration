<style>
  table, th, td {
    border: 1px solid black;
  }
</style>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
  
      <th>Author</th>
    
      <th>Description</th>
      
      <th>Status</td>
    </tr>
  </thead>

  <tbody>
    <% @book_requests.each do |book_request| %>
      <tr>
        <td ><%= book_request.user.email %></td>
        <td><%= book_request.book.title %></td>
        <td><%= book_request.book.author %></td>
        <td><%= book_request.status.titleize %></td>
        <td>
          <% if book_request.pending? %>
            <%= button_to "Cancel book issue request", book_request_path(book_request), method: :delete %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to "Back to book List ", books_path %>
</div>